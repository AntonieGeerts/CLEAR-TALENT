# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/clear_talent?schema=public"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-openai-org-id-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# AI Configuration
AI_ENABLED=true
AI_RATE_LIMIT_PER_MINUTE=60
AI_TIMEOUT_MS=30000
AI_MAX_RETRIES=3

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
# IMPORTANT: For production, add your frontend URL (e.g., https://clear-talent.vercel.app)
CORS_ORIGIN=https://clear-talent.vercel.app,http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs

# Data Residency & Compliance
DATA_RESIDENCY=US
PII_REDACTION_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365

# Optional: Alternative AI Providers
# ANTHROPIC_API_KEY=your-anthropic-key
# AZURE_OPENAI_API_KEY=your-azure-key
# AZURE_OPENAI_ENDPOINT=your-azure-endpoint
