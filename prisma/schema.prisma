// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// TENANT & USER MANAGEMENT
// ============================================================================

enum TenantPlan {
  BASIC
  PRO
  ENTERPRISE
}

model Tenant {
  id               String      @id @default(uuid())
  name             String
  slug             String      @unique
  plan             TenantPlan  @default(BASIC)
  settings         Json        @default("{}")
  isActive         Boolean     @default(true) @map("is_active")
  onboardingStatus String      @default("pending") @map("onboarding_status") // pending, in_progress, completed
  logo             String?
  primaryColor     String?     @map("primary_color")
  createdAt        DateTime    @default(now()) @map("created_at")
  updatedAt        DateTime    @updatedAt @map("updated_at")

  // Relations
  users                User[]
  memberships          TenantUserMembership[]
  invitations          Invitation[]
  roles                Role[]
  rolePermissions      RolePermission[]
  competencies         Competency[]
  roleProfiles         RoleProfile[]
  aiAuditLogs          AIAuditLog[]
  embeddingVectors     EmbeddingVector[]
  reviewCycles         ReviewCycle[]
  feedbackItems        FeedbackItem[]
  learningAssets       LearningAsset[]
  developmentPlans     DevelopmentPlan[]
  jobDescriptions      JobDescription[]
  organizationalGoals  OrganizationalGoal[]
  performanceImprovementPlans PerformanceImprovementPlan[]
  scoringSystems       ScoringSystem[]
  approvalFlows        ApprovalFlowDefinition[]
  approvalInstances    ApprovalInstance[]
  auditLogs            AuditLog[]

  @@map("tenants")
}

enum UserRole {
  SYSTEM_ADMIN      // CLEARTalent global admin
  ADMIN             // Client HR owner (formerly HR_ADMIN)
  DEPARTMENT_HEAD   // Strategic leader
  MANAGER           // People leader
  EMPLOYEE          // Individual contributor
  REVIEWER          // Feedback provider / Peer reviewer
  HR_MANAGER        // Deprecated - use ADMIN
}

model User {
  id                String    @id @default(uuid())
  tenantId          String?   @map("tenant_id") // Nullable for SYSTEM_ADMIN
  email             String    @unique
  passwordHash      String    @map("password_hash")
  firstName         String    @map("first_name")
  lastName          String    @map("last_name")
  role              UserRole  // Deprecated - use TenantUserMembership for RBAC
  department        String?
  position          String?
  potentialRating   Int?      @map("potential_rating") // 1-3 for 9-box matrix
  aiOptOut          Boolean   @default(false) @map("ai_opt_out")
  lastLoginAt       DateTime? @map("last_login_at")
  profile           Json      @default("{}")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  // Relations
  tenant                        Tenant?                      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  memberships                   TenantUserMembership[]
  invitationsSent               Invitation[]                 @relation("InvitationSender")
  createdCompetencies           Competency[]                 @relation("CompetencyCreator")
  createdRoleProfiles           RoleProfile[]                @relation("RoleProfileCreator")
  aiAuditLogs                   AIAuditLog[]
  managedReviews                Review[]                     @relation("ReviewManager")
  receivedReviews               Review[]                     @relation("ReviewEmployee")
  createdGoals                  Goal[]
  skillProfiles                 SkillProfile[]
  developmentPlans              DevelopmentPlan[]
  feedbackGiven                 FeedbackItem[]               @relation("FeedbackGiver")
  feedbackReceived              FeedbackItem[]               @relation("FeedbackReceiver")
  performanceImprovementPlans   PerformanceImprovementPlan[] @relation("PIPEmployee")
  createdOrganizationalGoals    OrganizationalGoal[]         @relation("OrgGoalCreator")
  auditLogs                     AuditLog[]
  approvalActions               ApprovalAction[]

  @@index([tenantId])
  @@index([email])
  @@map("users")
}

// ============================================================================
// ACCESS CONTROL & RBAC
// ============================================================================

enum MembershipStatus {
  ACTIVE
  PENDING_INVITE
  SUSPENDED
  LEFT
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  REVOKED
}

enum PermissionScope {
  SELF    // User can only act on their own resources
  TEAM    // User can act on their team's resources
  ORG     // User can act on all resources in the organization
}

enum ApproverType {
  ROLE     // Approver is determined by role
  USER     // Specific user is the approver
  DYNAMIC  // Approver is determined dynamically (e.g., manager of requester)
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum ApprovalActionType {
  APPROVE
  REJECT
  REQUEST_CHANGES
}

model TenantUserMembership {
  id                String           @id @default(uuid())
  tenantId          String           @map("tenant_id")
  userId            String           @map("user_id")
  primaryRoleId     String           @map("primary_role_id")
  additionalRoleIds String[]         @default([]) @map("additional_role_ids")
  status            MembershipStatus @default(ACTIVE)
  metadata          Json             @default("{}") // department, manager_id, location, etc.
  createdAt         DateTime         @default(now()) @map("created_at")
  updatedAt         DateTime         @updatedAt @map("updated_at")

  // Relations
  tenant      Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  primaryRole Role   @relation(fields: [primaryRoleId], references: [id])

  @@unique([tenantId, userId])
  @@index([tenantId])
  @@index([userId])
  @@index([status])
  @@map("tenant_user_memberships")
}

model Invitation {
  id             String           @id @default(uuid())
  tenantId       String           @map("tenant_id")
  email          String
  invitedByUserId String          @map("invited_by_user_id")
  roleIds        String[]         @default([]) @map("role_ids")
  status         InvitationStatus @default(PENDING)
  expiresAt      DateTime         @map("expires_at")
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime         @updatedAt @map("updated_at")

  // Relations
  tenant     Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  invitedBy  User   @relation("InvitationSender", fields: [invitedByUserId], references: [id])

  @@index([tenantId])
  @@index([email])
  @@index([status])
  @@map("invitations")
}

model Role {
  id              String   @id @default(uuid())
  tenantId        String?  @map("tenant_id") // Nullable for system roles
  name            String
  key             String   // e.g., TENANT_OWNER, HR_ADMIN, LINE_MANAGER, EMPLOYEE, READ_ONLY
  description     String?  @db.Text
  isSystemDefault Boolean  @default(false) @map("is_system_default")
  isEditable      Boolean  @default(true) @map("is_editable")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Relations
  tenant          Tenant?                @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  permissions     RolePermission[]
  memberships     TenantUserMembership[]
  approvalSteps   ApprovalStep[]

  @@unique([tenantId, key])
  @@index([tenantId])
  @@index([key])
  @@map("roles")
}

model Permission {
  id          String   @id @default(uuid())
  key         String   @unique // e.g., staff.view, staff.manage, roles.manage
  resource    String   // e.g., staff, roles, approvals, performance_reviews
  action      String   // e.g., view, create, update, delete, configure, approve
  description String?  @db.Text
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  rolePermissions RolePermission[]

  @@index([resource])
  @@index([action])
  @@map("permissions")
}

model RolePermission {
  id           String           @id @default(uuid())
  tenantId     String?          @map("tenant_id") // Nullable for system role permissions
  roleId       String           @map("role_id")
  permissionId String           @map("permission_id")
  scope        PermissionScope? // Optional scope restriction
  createdAt    DateTime         @default(now()) @map("created_at")
  updatedAt    DateTime         @updatedAt @map("updated_at")

  // Relations
  tenant     Tenant?    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@index([tenantId])
  @@index([roleId])
  @@index([permissionId])
  @@map("role_permissions")
}

// ============================================================================
// APPROVAL FLOWS
// ============================================================================

model ApprovalFlowDefinition {
  id             String   @id @default(uuid())
  tenantId       String   @map("tenant_id")
  name           String
  key            String   // e.g., promotion_request, salary_adjustment, goal_change
  description    String?  @db.Text
  targetResource String   @map("target_resource") // e.g., performance_review, development_plan
  isActive       Boolean  @default(true) @map("is_active")
  version        Int      @default(1)
  createdByUserId String  @map("created_by_user_id")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relations
  tenant    Tenant             @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  steps     ApprovalStep[]
  instances ApprovalInstance[]

  @@unique([tenantId, key])
  @@index([tenantId])
  @@index([isActive])
  @@map("approval_flow_definitions")
}

model ApprovalStep {
  id              String        @id @default(uuid())
  flowId          String        @map("flow_id")
  orderIndex      Int           @map("order_index")
  approverType    ApproverType  @map("approver_type")
  approverRoleId  String?       @map("approver_role_id")
  approverUserId  String?       @map("approver_user_id")
  dynamicRule     Json?         @map("dynamic_rule") // e.g., { "type": "manager_of_requester" }
  minApprovals    Int           @default(1) @map("min_approvals")
  slaHours        Int?          @map("sla_hours")
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")

  // Relations
  flow            ApprovalFlowDefinition @relation(fields: [flowId], references: [id], onDelete: Cascade)
  approverRole    Role?                  @relation(fields: [approverRoleId], references: [id])
  approvalActions ApprovalAction[]

  @@index([flowId])
  @@index([orderIndex])
  @@map("approval_steps")
}

model ApprovalInstance {
  id               String         @id @default(uuid())
  flowId           String         @map("flow_id")
  tenantId         String         @map("tenant_id")
  targetEntityType String         @map("target_entity_type") // e.g., PerformanceReview, Request
  targetEntityId   String         @map("target_entity_id")
  status           ApprovalStatus @default(PENDING)
  currentStepIndex Int            @default(0) @map("current_step_index")
  createdAt        DateTime       @default(now()) @map("created_at")
  updatedAt        DateTime       @updatedAt @map("updated_at")

  // Relations
  flow    ApprovalFlowDefinition @relation(fields: [flowId], references: [id], onDelete: Cascade)
  tenant  Tenant                 @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  actions ApprovalAction[]

  @@index([flowId])
  @@index([tenantId])
  @@index([targetEntityType, targetEntityId])
  @@index([status])
  @@map("approval_instances")
}

model ApprovalAction {
  id                String             @id @default(uuid())
  instanceId        String             @map("instance_id")
  stepId            String             @map("step_id")
  performedByUserId String             @map("performed_by_user_id")
  action            ApprovalActionType
  comment           String?            @db.Text
  createdAt         DateTime           @default(now()) @map("created_at")

  // Relations
  instance    ApprovalInstance @relation(fields: [instanceId], references: [id], onDelete: Cascade)
  step        ApprovalStep     @relation(fields: [stepId], references: [id], onDelete: Cascade)
  performedBy User             @relation(fields: [performedByUserId], references: [id])

  @@index([instanceId])
  @@index([stepId])
  @@index([performedByUserId])
  @@map("approval_actions")
}

// ============================================================================
// AUDIT LOGGING
// ============================================================================

model AuditLog {
  id           String   @id @default(uuid())
  tenantId     String   @map("tenant_id")
  actorUserId  String   @map("actor_user_id")
  eventType    String   @map("event_type") // e.g., staff.invited, role.created
  resourceType String   @map("resource_type")
  resourceId   String   @map("resource_id")
  metadata     Json     @default("{}") // Diff, old vs new, etc.
  createdAt    DateTime @default(now()) @map("created_at")

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  actor  User   @relation(fields: [actorUserId], references: [id])

  @@index([tenantId])
  @@index([actorUserId])
  @@index([eventType])
  @@index([resourceType, resourceId])
  @@index([createdAt])
  @@map("audit_logs")
}

// ============================================================================
// COMPETENCY LIBRARY
// ============================================================================

enum CompetencyType {
  CORE
  LEADERSHIP
  FUNCTIONAL
  TECHNICAL  // Legacy - to be phased out
}

model Competency {
  id          String         @id @default(uuid())
  tenantId    String         @map("tenant_id")
  name        String
  type        CompetencyType
  description String         @db.Text
  category    String
  tags        String[]       @default([])
  version     Int            @default(1)
  createdBy   String         @map("created_by")
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")

  // Relations
  tenant                Tenant                @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  creator               User                  @relation("CompetencyCreator", fields: [createdBy], references: [id])
  proficiencyLevels     ProficiencyLevel[]
  behavioralIndicators  BehavioralIndicator[]
  roleCompetencies      RoleCompetency[]
  embeddingVectors      EmbeddingVector[]
  skillProfiles         SkillProfile[]
  questions             CompetencyQuestion[]

  @@unique([name, tenantId], map: "unique_competency_per_tenant")
  @@index([tenantId])
  @@index([type])
  @@index([category])
  @@map("competencies")
}

enum QuestionType {
  BEHAVIORAL
  SITUATIONAL
  TECHNICAL
  KNOWLEDGE
}

model CompetencyQuestion {
  id                  String        @id @default(uuid())
  competencyId        String        @map("competency_id")
  proficiencyLevelId  String?       @map("proficiency_level_id") // Link to Basic, Proficient, Advanced, Expert
  statement           String        @db.Text // Behavior indicator
  type                QuestionType
  examples            String[]      @default([])
  aiGenerated         Boolean       @default(false) @map("ai_generated")

  // Scoring system support
  scoringSystemId  String?       @map("scoring_system_id")
  weight           Float?        @default(1.0) // Question weight within competency
  scoreMin         Int?          @map("score_min") // Minimum score for this question
  scoreMax         Int?          @map("score_max") // Maximum score for this question
  behavioralAnchors Json?        @map("behavioral_anchors") // For BARS: { "1": "description", "2": "description", ... }

  // 4-option rating scale (stored as JSON for flexibility)
  // Example: { "1": "Never Demonstrated", "2": "Sometimes Demonstrated", "3": "Consistently Demonstrated", "4": "Consistently + Higher Level" }
  ratingOptions    Json?         @map("rating_options")

  createdAt        DateTime      @default(now()) @map("created_at")
  updatedAt        DateTime      @updatedAt @map("updated_at")

  // Relations
  competency       Competency        @relation(fields: [competencyId], references: [id], onDelete: Cascade)
  proficiencyLevel ProficiencyLevel? @relation(fields: [proficiencyLevelId], references: [id], onDelete: SetNull)
  scoringSystem    ScoringSystem?    @relation(fields: [scoringSystemId], references: [id], onDelete: SetNull)
  assessmentResponses AssessmentResponse[]

  @@index([competencyId])
  @@index([proficiencyLevelId])
  @@index([scoringSystemId])
  @@map("competency_questions")
}

model ScoringSystem {
  id          String   @id @default(uuid())
  tenantId    String   @map("tenant_id")
  systemId    String   @map("system_id") // 'weighted_likert', 'bars', etc.
  name        String
  description String   @db.Text
  config      Json     // Store the full scoring system configuration
  isActive    Boolean  @default(true) @map("is_active")
  isDefault   Boolean  @default(false) @map("is_default")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  tenant    Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  questions CompetencyQuestion[]

  @@unique([tenantId, systemId])
  @@index([tenantId])
  @@map("scoring_systems")
}

model ProficiencyLevel {
  id            String   @id @default(uuid())
  competencyId  String   @map("competency_id")
  name          String
  numericLevel  Int      @map("numeric_level")
  description   String   @db.Text
  sortOrder     Int      @map("sort_order")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  competency            Competency            @relation(fields: [competencyId], references: [id], onDelete: Cascade)
  behavioralIndicators  BehavioralIndicator[]
  questions             CompetencyQuestion[]  // Questions for this proficiency level
  roleCompetencies      RoleCompetency[]
  skillProfiles         SkillProfile[]

  @@index([competencyId])
  @@map("proficiency_levels")
}

model BehavioralIndicator {
  id           String   @id @default(uuid())
  competencyId String   @map("competency_id")
  levelId      String   @map("level_id")
  description  String   @db.Text
  examples     String[] @default([])
  sortOrder    Int      @map("sort_order")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  competency Competency       @relation(fields: [competencyId], references: [id], onDelete: Cascade)
  level      ProficiencyLevel @relation(fields: [levelId], references: [id], onDelete: Cascade)

  @@index([competencyId])
  @@index([levelId])
  @@map("behavioral_indicators")
}

// ============================================================================
// ROLE PROFILES
// ============================================================================

enum Seniority {
  ENTRY
  MID
  SENIOR
  LEAD
  PRINCIPAL
  EXECUTIVE
}

model RoleProfile {
  id          String    @id @default(uuid())
  tenantId    String    @map("tenant_id")
  title       String
  department  String
  seniority   Seniority
  description String    @db.Text
  version     Int       @default(1)
  createdBy   String    @map("created_by")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  tenant            Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  creator           User                @relation("RoleProfileCreator", fields: [createdBy], references: [id])
  roleCompetencies  RoleCompetency[]
  embeddingVectors  EmbeddingVector[]
  goals             Goal[]

  @@index([tenantId])
  @@index([department])
  @@map("role_profiles")
}

model RoleCompetency {
  id            String   @id @default(uuid())
  roleProfileId String   @map("role_profile_id")
  competencyId  String   @map("competency_id")
  requiredLevel String   @map("required_level_id")
  isMandatory   Boolean  @default(true) @map("is_mandatory")
  createdAt     DateTime @default(now()) @map("created_at")

  // Relations
  roleProfile   RoleProfile      @relation(fields: [roleProfileId], references: [id], onDelete: Cascade)
  competency    Competency       @relation(fields: [competencyId], references: [id], onDelete: Cascade)
  level         ProficiencyLevel @relation(fields: [requiredLevel], references: [id])

  @@index([roleProfileId])
  @@index([competencyId])
  @@map("role_competencies")
}

// ============================================================================
// AI ENGINE
// ============================================================================

enum AIModule {
  COMPETENCY
  REVIEW
  FEEDBACK
  JD
  LEARNING
  GOAL
  APPRAISAL
}

model AIPromptTemplate {
  id         String   @id @default(uuid())
  name       String
  module     AIModule
  promptType String   @map("prompt_type")
  template   String   @db.Text
  variables  Json     @default("[]")
  version    Int      @default(1)
  isActive   Boolean  @default(true) @map("is_active")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@index([module])
  @@index([promptType])
  @@map("ai_prompt_templates")
}

enum AIAuditStatus {
  SUCCESS
  ERROR
  FILTERED
  REJECTED
}

model AIAuditLog {
  id         String        @id @default(uuid())
  tenantId   String        @map("tenant_id")
  userId     String        @map("user_id")
  module     String
  action     String
  prompt     String        @db.Text
  response   String?       @db.Text
  tokensUsed Int?          @map("tokens_used")
  latencyMs  Int?          @map("latency_ms")
  status     AIAuditStatus
  metadata   Json          @default("{}")
  createdAt  DateTime      @default(now()) @map("created_at")

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([userId])
  @@index([createdAt])
  @@map("ai_audit_logs")
}

enum EntityType {
  COMPETENCY
  ROLE
  DOCUMENT
  FEEDBACK
  REVIEW
}

model EmbeddingVector {
  id         String     @id @default(uuid())
  tenantId   String     @map("tenant_id")
  entityType EntityType @map("entity_type")
  entityId   String     @map("entity_id")
  content    String     @db.Text
  vectorData String?    @map("vector_data") @db.Text
  metadata   Json       @default("{}")
  createdAt  DateTime   @default(now()) @map("created_at")

  // Relations
  tenant      Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  competency  Competency?  @relation(fields: [entityId], references: [id], onDelete: Cascade, map: "embedding_vectors_competency_fkey")
  roleProfile RoleProfile? @relation(fields: [entityId], references: [id], onDelete: Cascade, map: "embedding_vectors_role_profile_fkey")

  @@index([tenantId])
  @@index([entityType])
  @@index([entityId])
  @@map("embedding_vectors")
}

// ============================================================================
// PERFORMANCE MANAGEMENT
// ============================================================================

enum ReviewCycleFrequency {
  ANNUAL
  SEMI_ANNUAL
  QUARTERLY
  MONTHLY
  PROJECT_BASED
  AD_HOC
}

enum ReviewCycleStatus {
  DRAFT
  ACTIVE
  IN_PROGRESS
  COMPLETED
  ARCHIVED
}

model ReviewCycle {
  id          String               @id @default(uuid())
  tenantId    String               @map("tenant_id")
  name        String
  description String?              @db.Text
  frequency   ReviewCycleFrequency
  status      ReviewCycleStatus    @default(DRAFT)
  startDate   DateTime             @map("start_date")
  endDate     DateTime             @map("end_date")
  createdAt   DateTime             @default(now()) @map("created_at")
  updatedAt   DateTime             @updatedAt @map("updated_at")

  // Relations
  tenant  Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  reviews Review[]

  @@index([tenantId])
  @@index([status])
  @@map("review_cycles")
}

enum ReviewStatus {
  NOT_STARTED
  IN_PROGRESS
  SUBMITTED
  APPROVED
  COMPLETED
}

model Review {
  id            String       @id @default(uuid())
  cycleId       String       @map("cycle_id")
  employeeId    String       @map("employee_id")
  managerId     String       @map("manager_id")
  status        ReviewStatus @default(NOT_STARTED)
  selfReview    String?      @db.Text @map("self_review")
  managerReview String?      @db.Text @map("manager_review")
  strengths     String?      @db.Text
  areasForGrowth String?      @db.Text @map("areas_for_growth")
  overallRating Int?         @map("overall_rating")
  metadata      Json         @default("{}")
  submittedAt   DateTime?    @map("submitted_at")
  approvedAt    DateTime?    @map("approved_at")
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")

  // Relations
  cycle    ReviewCycle @relation(fields: [cycleId], references: [id], onDelete: Cascade)
  employee User        @relation("ReviewEmployee", fields: [employeeId], references: [id])
  manager  User        @relation("ReviewManager", fields: [managerId], references: [id])

  @@index([cycleId])
  @@index([employeeId])
