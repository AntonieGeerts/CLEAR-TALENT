// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// TENANT & USER MANAGEMENT
// ============================================================================

model Tenant {
  id               String   @id @default(uuid())
  name             String
  slug             String   @unique
  settings         Json     @default("{}")
  isActive         Boolean  @default(true) @map("is_active")
  onboardingStatus String   @default("pending") @map("onboarding_status") // pending, in_progress, completed
  logo             String?
  primaryColor     String?  @map("primary_color")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  // Relations
  users                User[]
  competencies         Competency[]
  roleProfiles         RoleProfile[]
  aiAuditLogs          AIAuditLog[]
  embeddingVectors     EmbeddingVector[]
  reviewCycles         ReviewCycle[]
  feedbackItems        FeedbackItem[]
  learningAssets       LearningAsset[]
  developmentPlans     DevelopmentPlan[]
  jobDescriptions      JobDescription[]
  organizationalGoals  OrganizationalGoal[]
  performanceImprovementPlans PerformanceImprovementPlan[]
  scoringSystems       ScoringSystem[]

  @@map("tenants")
}

enum UserRole {
  SYSTEM_ADMIN      // CLEARTalent global admin
  ADMIN             // Client HR owner (formerly HR_ADMIN)
  DEPARTMENT_HEAD   // Strategic leader
  MANAGER           // People leader
  EMPLOYEE          // Individual contributor
  REVIEWER          // Feedback provider / Peer reviewer
  HR_MANAGER        // Deprecated - use ADMIN
}

model User {
  id                String   @id @default(uuid())
  tenantId          String?  @map("tenant_id") // Nullable for SYSTEM_ADMIN
  email             String   @unique
  passwordHash      String   @map("password_hash")
  firstName         String   @map("first_name")
  lastName          String   @map("last_name")
  role              UserRole
  department        String?
  position          String?
  potentialRating   Int?     @map("potential_rating") // 1-3 for 9-box matrix
  aiOptOut          Boolean  @default(false) @map("ai_opt_out")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  // Relations
  tenant                        Tenant?                      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdCompetencies           Competency[]                 @relation("CompetencyCreator")
  createdRoleProfiles           RoleProfile[]                @relation("RoleProfileCreator")
  aiAuditLogs                   AIAuditLog[]
  managedReviews                Review[]                     @relation("ReviewManager")
  receivedReviews               Review[]                     @relation("ReviewEmployee")
  createdGoals                  Goal[]
  skillProfiles                 SkillProfile[]
  developmentPlans              DevelopmentPlan[]
  feedbackGiven                 FeedbackItem[]               @relation("FeedbackGiver")
  feedbackReceived              FeedbackItem[]               @relation("FeedbackReceiver")
  performanceImprovementPlans   PerformanceImprovementPlan[] @relation("PIPEmployee")
  createdOrganizationalGoals    OrganizationalGoal[]         @relation("OrgGoalCreator")

  @@index([tenantId])
  @@index([email])
  @@map("users")
}

// ============================================================================
// COMPETENCY LIBRARY
// ============================================================================

enum CompetencyType {
  CORE
  LEADERSHIP
  FUNCTIONAL
  TECHNICAL  // Legacy - to be phased out
}

model Competency {
  id          String         @id @default(uuid())
  tenantId    String         @map("tenant_id")
  name        String
  type        CompetencyType
  description String         @db.Text
  category    String
  tags        String[]       @default([])
  version     Int            @default(1)
  createdBy   String         @map("created_by")
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")

  // Relations
  tenant                Tenant                @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  creator               User                  @relation("CompetencyCreator", fields: [createdBy], references: [id])
  proficiencyLevels     ProficiencyLevel[]
  behavioralIndicators  BehavioralIndicator[]
  roleCompetencies      RoleCompetency[]
  embeddingVectors      EmbeddingVector[]
  skillProfiles         SkillProfile[]
  questions             CompetencyQuestion[]

  @@unique([name, tenantId], map: "unique_competency_per_tenant")
  @@index([tenantId])
  @@index([type])
  @@index([category])
  @@map("competencies")
}

enum QuestionType {
  BEHAVIORAL
  SITUATIONAL
  TECHNICAL
  KNOWLEDGE
}

model CompetencyQuestion {
  id                  String        @id @default(uuid())
  competencyId        String        @map("competency_id")
  proficiencyLevelId  String?       @map("proficiency_level_id") // Link to Basic, Proficient, Advanced, Expert
  statement           String        @db.Text // Behavior indicator
  type                QuestionType
  examples            String[]      @default([])
  aiGenerated         Boolean       @default(false) @map("ai_generated")

  // Scoring system support
  scoringSystemId  String?       @map("scoring_system_id")
  weight           Float?        @default(1.0) // Question weight within competency
  scoreMin         Int?          @map("score_min") // Minimum score for this question
  scoreMax         Int?          @map("score_max") // Maximum score for this question
  behavioralAnchors Json?        @map("behavioral_anchors") // For BARS: { "1": "description", "2": "description", ... }

  // 4-option rating scale (stored as JSON for flexibility)
  // Example: { "1": "Never Demonstrated", "2": "Sometimes Demonstrated", "3": "Consistently Demonstrated", "4": "Consistently + Higher Level" }
  ratingOptions    Json?         @map("rating_options")

  createdAt        DateTime      @default(now()) @map("created_at")
  updatedAt        DateTime      @updatedAt @map("updated_at")

  // Relations
  competency       Competency        @relation(fields: [competencyId], references: [id], onDelete: Cascade)
  proficiencyLevel ProficiencyLevel? @relation(fields: [proficiencyLevelId], references: [id], onDelete: SetNull)
  scoringSystem    ScoringSystem?    @relation(fields: [scoringSystemId], references: [id], onDelete: SetNull)

  @@index([competencyId])
  @@index([proficiencyLevelId])
  @@index([scoringSystemId])
  @@map("competency_questions")
}

model ScoringSystem {
  id          String   @id @default(uuid())
  tenantId    String   @map("tenant_id")
  systemId    String   @map("system_id") // 'weighted_likert', 'bars', etc.
  name        String
  description String   @db.Text
  config      Json     // Store the full scoring system configuration
  isActive    Boolean  @default(true) @map("is_active")
  isDefault   Boolean  @default(false) @map("is_default")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  tenant    Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  questions CompetencyQuestion[]

  @@unique([tenantId, systemId])
  @@index([tenantId])
  @@map("scoring_systems")
}

model ProficiencyLevel {
  id            String   @id @default(uuid())
  competencyId  String   @map("competency_id")
  name          String
  numericLevel  Int      @map("numeric_level")
  description   String   @db.Text
  sortOrder     Int      @map("sort_order")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  competency            Competency            @relation(fields: [competencyId], references: [id], onDelete: Cascade)
  behavioralIndicators  BehavioralIndicator[]
  questions             CompetencyQuestion[]  // Questions for this proficiency level
  roleCompetencies      RoleCompetency[]
  skillProfiles         SkillProfile[]
  questions             CompetencyQuestion[]

  @@index([competencyId])
  @@map("proficiency_levels")
}

model BehavioralIndicator {
  id           String   @id @default(uuid())
  competencyId String   @map("competency_id")
  levelId      String   @map("level_id")
  description  String   @db.Text
  examples     String[] @default([])
  sortOrder    Int      @map("sort_order")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  competency Competency       @relation(fields: [competencyId], references: [id], onDelete: Cascade)
  level      ProficiencyLevel @relation(fields: [levelId], references: [id], onDelete: Cascade)

  @@index([competencyId])
  @@index([levelId])
  @@map("behavioral_indicators")
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
  SCENARIO_BASED
  BEHAVIORAL
  SITUATIONAL
}

enum DifficultyLevel {
  BASIC
  INTERMEDIATE
  ADVANCED
  EXPERT
  MASTER
}

model CompetencyQuestion {
  id            String          @id @default(uuid())
  competencyId  String          @map("competency_id")
  levelId       String?         @map("level_id") // Optional - question may target specific level
  questionType  QuestionType    @map("question_type")
  difficulty    DifficultyLevel
  questionText  String          @db.Text @map("question_text")
  options       Json?           // Array of options for multiple choice
  correctAnswer String?         @db.Text @map("correct_answer")
  explanation   String?         @db.Text
  tags          String[]        @default([])
  isActive      Boolean         @default(true) @map("is_active")
  createdBy     String?         @map("created_by") // User who created or AI-generated
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")

  // Relations
  competency Competency        @relation(fields: [competencyId], references: [id], onDelete: Cascade)
  level      ProficiencyLevel? @relation(fields: [levelId], references: [id], onDelete: SetNull)

  @@index([competencyId])
  @@index([levelId])
  @@index([difficulty])
  @@map("competency_questions")
}

// ============================================================================
// ROLE PROFILES
// ============================================================================

enum Seniority {
  ENTRY
  MID
  SENIOR
  LEAD
  PRINCIPAL
  EXECUTIVE
}

model RoleProfile {
  id          String    @id @default(uuid())
  tenantId    String    @map("tenant_id")
  title       String
  department  String
  seniority   Seniority
  description String    @db.Text
  version     Int       @default(1)
  createdBy   String    @map("created_by")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  tenant            Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  creator           User                @relation("RoleProfileCreator", fields: [createdBy], references: [id])
  roleCompetencies  RoleCompetency[]
  embeddingVectors  EmbeddingVector[]
  goals             Goal[]

  @@index([tenantId])
  @@index([department])
  @@map("role_profiles")
}

model RoleCompetency {
  id            String   @id @default(uuid())
  roleProfileId String   @map("role_profile_id")
  competencyId  String   @map("competency_id")
  requiredLevel String   @map("required_level_id")
  isMandatory   Boolean  @default(true) @map("is_mandatory")
  createdAt     DateTime @default(now()) @map("created_at")

  // Relations
  roleProfile   RoleProfile      @relation(fields: [roleProfileId], references: [id], onDelete: Cascade)
  competency    Competency       @relation(fields: [competencyId], references: [id], onDelete: Cascade)
  level         ProficiencyLevel @relation(fields: [requiredLevel], references: [id])

  @@index([roleProfileId])
  @@index([competencyId])
  @@map("role_competencies")
}

// ============================================================================
// AI ENGINE
// ============================================================================

enum AIModule {
  COMPETENCY
  REVIEW
  FEEDBACK
  JD
  LEARNING
  GOAL
  APPRAISAL
}

model AIPromptTemplate {
  id         String   @id @default(uuid())
  name       String
  module     AIModule
  promptType String   @map("prompt_type")
  template   String   @db.Text
  variables  Json     @default("[]")
  version    Int      @default(1)
  isActive   Boolean  @default(true) @map("is_active")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@index([module])
  @@index([promptType])
  @@map("ai_prompt_templates")
}

enum AIAuditStatus {
  SUCCESS
  ERROR
  FILTERED
  REJECTED
}

model AIAuditLog {
  id         String        @id @default(uuid())
  tenantId   String        @map("tenant_id")
  userId     String        @map("user_id")
  module     String
  action     String
  prompt     String        @db.Text
  response   String?       @db.Text
  tokensUsed Int?          @map("tokens_used")
  latencyMs  Int?          @map("latency_ms")
  status     AIAuditStatus
  metadata   Json          @default("{}")
  createdAt  DateTime      @default(now()) @map("created_at")

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([userId])
  @@index([createdAt])
  @@map("ai_audit_logs")
}

enum EntityType {
  COMPETENCY
  ROLE
  DOCUMENT
  FEEDBACK
  REVIEW
}

model EmbeddingVector {
  id         String     @id @default(uuid())
  tenantId   String     @map("tenant_id")
  entityType EntityType @map("entity_type")
  entityId   String     @map("entity_id")
  content    String     @db.Text
  vectorData String?    @map("vector_data") @db.Text
  metadata   Json       @default("{}")
  createdAt  DateTime   @default(now()) @map("created_at")

  // Relations
  tenant      Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  competency  Competency?  @relation(fields: [entityId], references: [id], onDelete: Cascade, map: "embedding_vectors_competency_fkey")
  roleProfile RoleProfile? @relation(fields: [entityId], references: [id], onDelete: Cascade, map: "embedding_vectors_role_profile_fkey")

  @@index([tenantId])
  @@index([entityType])
  @@index([entityId])
  @@map("embedding_vectors")
}

// ============================================================================
// PERFORMANCE MANAGEMENT
// ============================================================================

enum ReviewCycleFrequency {
  ANNUAL
  SEMI_ANNUAL
  QUARTERLY
  MONTHLY
  PROJECT_BASED
  AD_HOC
}

enum ReviewCycleStatus {
  DRAFT
  ACTIVE
  IN_PROGRESS
  COMPLETED
  ARCHIVED
}

model ReviewCycle {
  id          String               @id @default(uuid())
  tenantId    String               @map("tenant_id")
  name        String
  description String?              @db.Text
  frequency   ReviewCycleFrequency
  status      ReviewCycleStatus    @default(DRAFT)
  startDate   DateTime             @map("start_date")
  endDate     DateTime             @map("end_date")
  createdAt   DateTime             @default(now()) @map("created_at")
  updatedAt   DateTime             @updatedAt @map("updated_at")

  // Relations
  tenant  Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  reviews Review[]

  @@index([tenantId])
  @@index([status])
  @@map("review_cycles")
}

enum ReviewStatus {
  NOT_STARTED
  IN_PROGRESS
  SUBMITTED
  APPROVED
  COMPLETED
}

model Review {
  id            String       @id @default(uuid())
  cycleId       String       @map("cycle_id")
  employeeId    String       @map("employee_id")
  managerId     String       @map("manager_id")
  status        ReviewStatus @default(NOT_STARTED)
  selfReview    String?      @db.Text @map("self_review")
  managerReview String?      @db.Text @map("manager_review")
  strengths     String?      @db.Text
  areasForGrowth String?      @db.Text @map("areas_for_growth")
  overallRating Int?         @map("overall_rating")
  metadata      Json         @default("{}")
  submittedAt   DateTime?    @map("submitted_at")
  approvedAt    DateTime?    @map("approved_at")
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")

  // Relations
  cycle    ReviewCycle @relation(fields: [cycleId], references: [id], onDelete: Cascade)
  employee User        @relation("ReviewEmployee", fields: [employeeId], references: [id])
  manager  User        @relation("ReviewManager", fields: [managerId], references: [id])

  @@index([cycleId])
  @@index([employeeId])
  @@index([managerId])
  @@map("reviews")
}

enum GoalStatus {
  DRAFT
  ACTIVE
  COMPLETED
  CANCELLED
  ARCHIVED
}

model Goal {
  id            String      @id @default(uuid())
  userId        String      @map("user_id")
  roleProfileId String?     @map("role_profile_id")
  title         String
  description   String      @db.Text
  targetDate    DateTime?   @map("target_date")
  status        GoalStatus  @default(DRAFT)
  progress      Int         @default(0)
  metadata      Json        @default("{}")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  // Relations
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  roleProfile RoleProfile? @relation(fields: [roleProfileId], references: [id])

  @@index([userId])
  @@index([status])
  @@map("goals")
}

// ============================================================================
// LEARNING & DEVELOPMENT
// ============================================================================

model SkillProfile {
  id            String   @id @default(uuid())
  userId        String   @map("user_id")
  competencyId  String   @map("competency_id")
  currentLevel  String   @map("current_level_id")
  targetLevel   String?  @map("target_level_id")
  assessedAt    DateTime @default(now()) @map("assessed_at")
  assessedBy    String?  @map("assessed_by")
  notes         String?  @db.Text
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  competency  Competency       @relation(fields: [competencyId], references: [id], onDelete: Cascade)
  current     ProficiencyLevel @relation(fields: [currentLevel], references: [id])

  @@index([userId])
  @@index([competencyId])
  @@map("skill_profiles")
}

enum AssetType {
  COURSE
  BOOK
  ARTICLE
  VIDEO
  WORKSHOP
  MENTORING
  CERTIFICATION
  OTHER
}

model LearningAsset {
  id          String    @id @default(uuid())
  tenantId    String    @map("tenant_id")
  title       String
  description String?   @db.Text
  type        AssetType
  url         String?
  duration    Int?
  provider    String?
  metadata    Json      @default("{}")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([type])
  @@map("learning_assets")
}

enum DevelopmentPlanStatus {
  DRAFT
  ACTIVE
  COMPLETED
  CANCELLED
}

model DevelopmentPlan {
  id          String                @id @default(uuid())
  tenantId    String                @map("tenant_id")
  userId      String                @map("user_id")
  title       String
  description String?               @db.Text
  status      DevelopmentPlanStatus @default(DRAFT)
  startDate   DateTime?             @map("start_date")
  targetDate  DateTime?             @map("target_date")
  actions     Json                  @default("[]")
  progress    Int                   @default(0)
  createdAt   DateTime              @default(now()) @map("created_at")
  updatedAt   DateTime              @updatedAt @map("updated_at")

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([userId])
  @@index([status])
  @@map("development_plans")
}

// ============================================================================
// FEEDBACK & 360
// ============================================================================

enum FeedbackType {
  POSITIVE
  CONSTRUCTIVE
  GENERAL
  PEER_360
}

model FeedbackItem {
  id         String       @id @default(uuid())
  tenantId   String       @map("tenant_id")
  giverId    String       @map("giver_id")
  receiverId String       @map("receiver_id")
  type       FeedbackType
  context    String?
  text       String       @db.Text
  isAnonymous Boolean      @default(false) @map("is_anonymous")
  sentiment  String?
  themes     String[]     @default([])
  metadata   Json         @default("{}")
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime     @updatedAt @map("updated_at")

  // Relations
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  giver    User   @relation("FeedbackGiver", fields: [giverId], references: [id])
  receiver User   @relation("FeedbackReceiver", fields: [receiverId], references: [id])

  @@index([tenantId])
  @@index([giverId])
  @@index([receiverId])
  @@map("feedback_items")
}

// ============================================================================
// RECRUITMENT (Optional - Stage 1 Basic Support)
// ============================================================================

enum JDStatus {
  DRAFT
  ACTIVE
  FILLED
  ARCHIVED
}

model JobDescription {
  id          String   @id @default(uuid())
  tenantId    String   @map("tenant_id")
  title       String
  department  String
  description String   @db.Text
  requirements String?  @db.Text
  status      JDStatus @default(DRAFT)
  metadata    Json     @default("{}")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([status])
  @@map("job_descriptions")
}

// ============================================================================
// ORGANIZATIONAL GOALS & CASCADING
// ============================================================================

enum GoalLevel {
  ORGANIZATIONAL
  DEPARTMENTAL
  TEAM
  INDIVIDUAL
}

model OrganizationalGoal {
  id          String    @id @default(uuid())
  tenantId    String    @map("tenant_id")
  title       String
  description String?   @db.Text
  level       GoalLevel
  department  String?
  parentId    String?   @map("parent_id") // For cascading goals
  weight      Int?      // Percentage weight
  targetDate  DateTime? @map("target_date")
  status      GoalStatus @default(DRAFT)
  createdBy   String    @map("created_by")
  metadata    Json      @default("{}")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  tenant        Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  creator       User                 @relation("OrgGoalCreator", fields: [createdBy], references: [id])
  parent        OrganizationalGoal?  @relation("GoalHierarchy", fields: [parentId], references: [id])
  children      OrganizationalGoal[] @relation("GoalHierarchy")

  @@index([tenantId])
  @@index([level])
  @@index([parentId])
  @@map("organizational_goals")
}

// ============================================================================
// PERFORMANCE IMPROVEMENT PLANS (PIP)
// ============================================================================

enum PIPStatus {
  ACTIVE
  ON_TRACK
  AT_RISK
  COMPLETED
  TERMINATED
}

model PerformanceImprovementPlan {
  id               String    @id @default(uuid())
  tenantId         String    @map("tenant_id")
  employeeId       String    @map("employee_id")
  managerId        String    @map("manager_id")
  status           PIPStatus @default(ACTIVE)
  startDate        DateTime  @map("start_date")
  endDate          DateTime  @map("end_date")
  objectives       Json      @default("[]") // Array of improvement objectives
  checkIns         Json      @default("[]") // Array of check-in records
  finalOutcome     String?   @db.Text @map("final_outcome")
  closureDate      DateTime? @map("closure_date")
  metadata         Json      @default("{}")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  // Relations
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  employee User   @relation("PIPEmployee", fields: [employeeId], references: [id])

  @@index([tenantId])
  @@index([employeeId])
  @@index([status])
  @@map("performance_improvement_plans")
}
